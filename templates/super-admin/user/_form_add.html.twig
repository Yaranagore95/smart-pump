{{ form_start(form, {'multipart': true, 'attr': {'onsubmit':"return confirm('Êtes-vous sûr(e) ?')"}}) }}
<div class="form-row font-weight-bold align-items-end">
    <div class="col-md-6">
        {{ form_row(form.nom) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.prenom) }}
    </div>
</div>

<div class="form-row font-weight-bold align-items-end">
    <div class="col-md-6">
        {{ form_row(form.email) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.telephone) }}
    </div>
</div>

<div class="form-row font-weight-bold align-items-end">
    <div class="col-md-6">
        {{ form_row(form.adresse) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.imageFile) }}
    </div>
</div>

<div class="form-row font-weight-bold align-items-end">
    <div class="col-md-6">
        {{ form_row(form.password.first) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.password.second) }}
    </div>
</div>

<div class="form-group form-inline ml-1">
    <label for="isAdmin">
        <input type="checkbox" value="1" name="isAdmin" class="form-check">
        &nbsp;EST ADMINISTRATEUR ?
    </label>
</div>

{{ form_widget(form) }}

{{ form_end(form) }}