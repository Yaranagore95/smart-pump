{% extends 'base-dashboard-client.html.twig' %}

{% block title 'Page dasboard' %}

{% block stylesheets %}
    <style>
        .ml6 {
            position: relative;
            font-weight: 900;
            font-size: 1em;
        }

        .ml6 .text-wrapper {
            position: relative;
            display: inline-block;
            padding-top: 0.2em;
            padding-right: 0.05em;
            overflow: hidden;
        }

        .ml6 .letter {
            display: inline-block;
            line-height: 1em;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p class="text-center col-md-8 offset-md-2">
                        <img src="{{ asset('images/sfb.png') }}" width="300px" height="300px;" alt="sfb logo">
                    </p>
                </div>
                <div class="col-md-6">
                    <h3 class="font-weight-bold text-center">INFORMATIONS</h3>
                    <ul class="list-group">
                        <li class="list-group-item text-uppercase font-weight-bold"><p>MAIL : sfb@gmail.com</p></li>
                        <li class="list-group-item text-uppercase font-weight-bold"><p>TEL : (+22377771616/
                                +22320280272) </p></li>
                    </ul>
                    <h5 class="text-center font-weight-bold mt-3">DESCRIPTION</h5>
                    <p>Societe Anonyme au capital de 10.000.000 FCFA - RC N.o MA-BKO-2019-B-13952 - NIF: 085143483V -
                        Siege social: torokorobougou. Face du pont Fahd</p>
                </div>
            </div>
        </div>
    </div>
    <div class="jumbotron">
        <h2 class="text-center font-weight-bold text-uppercase">Dashboard {{ app.user.structureClient.name }}</h2>
        <p class="text-center text-uppercase font-weight-bold mt-3">Bienvenu(e)
            cher(e) {{ app.user.nom }} {{ app.user.prenom }}</p>
        <p class="small text-center font-weight-bold text-uppercase">Vous êtes connecté en tant
            que {% if app.user.isAdmin %}
                Administrateur
            {% else %}
                Utilisateur
            {% endif %} de l'application.</p>
        <h2 class="ml6 text-center">
                    <span class="text-wrapper">
                        <span class="letters text-danger">PRIX ACTUEL GASOIL : {{ prixGasoil }} CFA</span>&nbsp;&nbsp;
                        <span class="letters text-danger">PRIX ACTUEL ESSENCE : {{ prixEssence }} CFA</span>
                    </span>
        </h2>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
    <script>
        anime.timeline({loop: true})
            .add({
                targets: '.ml6 .letter',
                translateY: ["1.1em", 0],
                translateZ: 0,
                duration: 750,
                delay: (el, i) => 50 * i
            }).add({
            targets: '.ml6',
            opacity: 0,
            duration: 1000,
            easing: "easeOutExpo",
            delay: 1000
        });
    </script>
{% endblock %}