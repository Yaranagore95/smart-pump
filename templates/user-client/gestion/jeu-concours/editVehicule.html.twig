{% extends 'base-gestion-client.html.twig' %}

{% block body %}
    <h3 class="font-weight-bold text-uppercase">MODIFICATION VEHICULE {{ vehicule.immatriculation }}
        DE {{ vehicule.chauffeur.nom }} {{ vehicule.chauffeur.prenom }}</h3>
    <hr>
    <div class="card">
        <div class="card-body font-weight-bold text-uppercase">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success text-center text-uppercase font-weight-boldmb-3">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger text-center text-uppercase font-weight-bold mb-3">
                    {{ message }}
                </div>
            {% endfor %}
            {{ include('user-client/gestion/jeu-concours/_form_vehicule.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block title 'Modifie le vehicule du chauffeur' %}
