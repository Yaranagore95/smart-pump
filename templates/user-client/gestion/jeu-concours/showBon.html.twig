{% extends 'base-gestion-client.html.twig' %}

{% block body %}
    <h3 class="font-weight-bold text-uppercase">DETAIL BON</h3>
    <hr>
    <div class="card">
        <div class="card-body text-uppercase font-weight-bold">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success text-center text-uppercase font-weight-boldmb-3">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger text-center text-uppercase font-weight-bold mb-3">
                    {{ message }}
                </div>
            {% endfor %}
            <h5 class="font-weight-bold text-uppercase">DETAIL DU BON DE {{ bon.vehiculeChauffeur.immatriculation }}</h5>
            <hr>
            <div class="row">
                <div class="col-md-7">
                    <div class="row font-weight-bold">
                        <div class="col-sm-4">
                            <p class="text-left">QUANTITE : </p>
                        </div>
                        <div class="col-sm-8">
                            <p><span class="badge badge-success badge-pill font-weight-bold text-uppercase">{{ bon.quantite|format_number }} L</span></p>
                        </div>
                    </div>
                    <hr class="mt--3">
                    <div class="row font-weight-bold">
                        <div class="col-sm-4">
                            <p class="text-left">VEHICULE : </p>
                        </div>
                        <div class="col-sm-8">
                            <p>{{ bon.vehiculeChauffeur.immatriculation }}</p>
                        </div>
                    </div>
                    <hr class="mt--3">
                    <div class="row font-weight-bold">
                        <div class="col-sm-4">
                            <p class="text-left">CHAUFFEUR : </p>
                        </div>
                        <div class="col-sm-8">
                            <p>{{ bon.vehiculeChauffeur.chauffeur.nom }} {{ bon.vehiculeChauffeur.chauffeur.prenom }}</p>
                        </div>
                    </div>
                    <hr class="mt--3">
                    <div class="row font-weight-bold">
                        <div class="col-sm-4">
                            <p class="text-left">CARBURANT : </p>
                        </div>
                        <div class="col-sm-8">
                            <p>{{ bon.vehiculeChauffeur.typeCarburant.name }}</p>
                        </div>
                    </div>
                    <hr class="mt--3">
                    <div class="row font-weight-bold">
                        <div class="col-sm-4">
                            <p class="text-left">TYPE VEHICULE : </p>
                        </div>
                        <div class="col-sm-8">
                            <p>{{ bon.vehiculeChauffeur.chauffeur.typeVehicule.name }}</p>
                        </div>
                    </div>
                    <hr class="mt--3">
                    <div class="row font-weight-bold">
                        <div class="col-sm-4">
                            <p class="text-left">MONTANT : </p>
                        </div>
                        <div class="col-sm-8">
                            <p class="badge badge-pill badge-danger font-weight-bold">{{ bon.montant|format_number }} FCFA</p>
                        </div>
                    </div>
                    <hr class="mt--3">
                    <div class="row font-weight-bold">
                        <div class="col-sm-4">
                            <p class="text-left">DATE : </p>
                        </div>
                        <div class="col-sm-8">
                            <p>{{ bon.createdAt|date('d-m-Y') }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <p class="text-center">
                        <img src="{{ vich_uploader_asset(bon) }}" width="300px" height="250px" alt="">
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title 'Detail bon' %}

