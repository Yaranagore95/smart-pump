{% extends "base-dashboard-client.html.twig" %}
{% block title 'Nouveau pistolet' %}

{% block body %}
    <h3 class="font-weight-bold">GESTION PISTOLET</h3>
    <hr>
    <div class="card">
        <h3 class="card-header font-weight-bold text-uppercase">Modifier pistolet</h3>
        <div class="card-body">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success text-center text-uppercase font-weight-bold">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger text-center text-uppercase font-weight-bold">
                    {{ message }}
                </div>
            {% endfor %}
            {{ include('user-client/dashboard/pistolet/_form.html.twig', {'button_label': 'MODIFIER'}) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}

{% endblock %}