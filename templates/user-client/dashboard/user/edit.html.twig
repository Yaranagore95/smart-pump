{% extends 'base-dashboard-client.html.twig' %}

{% block title 'Modifier mon compte' %}

{% block body %}
    <h3 class="font-weight-bold text-uppercase">GESTION UTILISATEURS</h3>
    <hr>
    <div class="card">
        <h3 class="card-header font-weight-bold">MODIFIER UTILISATEUR</h3>
        <div class="card-body">
            {{ include('admin/user/_form_edit.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $('.custom-file input').change(function (e) {
            let files = [];
            for (let i = 0; i < $(this)[0].files.length; i++) {
                files.push($(this)[0].files[i].name);
            }
            $(this).next('.custom-file-label').html(files.join(', '));
        });
    </script>
{% endblock %}
